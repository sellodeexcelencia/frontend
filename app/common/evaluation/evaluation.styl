@import '../../colors.styl'

.evaluation .border
    border solid 1px $brown
    border-radius 10px
    height 90px

.evaluation .border .full-rate
    font-size 26px

.evaluation .star
    position relative
    font-size 60px
    color $yellow

.evaluation .star span
    display block
    width 56px
    height 60px
    font-family Univers
    font-size 15px
    position absolute
    top 0px
    left 0px
    text-align center
    line-height 60px

.evaluation .title
    font-size 1.2em
    padding 5px

.evaluation .full-rate.right
    float right

.evaluation .info
    padding-top 20px

.evaluation .questions
    margin-bottom 20px

.evaluation .comment
    margin-top 20px

.evaluation .full-rate.right i
    cursor pointer

.evaluation textarea
    border solid 1px

.evaluation .legal
    padding 20px

.evaluation .footer
    height 50px

.evaluation .finished
    padding 20px 0px

.evaluation .finished .thanks
    font-size 1.5em

.evaluation .question-text
    margin-left 10px

.evaluation .legal
    font-size 0.8em

.evaluation .errorComment
    boder solid 1px $red
.modal
    top 5% !important
    max-height 90%